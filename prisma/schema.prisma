// prisma/schema.prisma
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- RIMUOVI o COMMENTA LA DEFINIZIONE ENUM ---
