model Card {
  id                      Int      @id @default(autoincrement())
  dbId                    String   @unique
  nome                    String
  tipo                    String   // <--- Deve essere String
  attacco                 Int?
  vita                    Int?
  punteggioPreparazioneIniziale Int
  descrizioneAbilita      String?
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}